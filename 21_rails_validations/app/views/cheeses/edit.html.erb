<% if !@cheese.errors.empty? %>
  <% @cheese.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for(@cheese) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :stinkiness %>
  <%= f.number_field :stinkiness %>
  <%= f.label :cheese_type %>
  <%= f.text_field :cheese_type %>
  <%= f.label :milk %>
  <%= f.text_field :milk %>
  <%= f.submit %>
<% end %>

<%= link_to 'Delete', @cheese, method: :delete %>
