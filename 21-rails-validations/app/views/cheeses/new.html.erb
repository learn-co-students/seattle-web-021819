<% if !@cheese.errors.empty? %>
  <% @cheese.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for(@cheese) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :stinkiness %>
  <%= f.number_field :stinkiness %>
  <%= f.label :cheese_type %>
  <%= f.text_field :cheese_type %>
  <%= f.label :milk %>
  <%= f.collection_select :milk, @milks, :itself, :itself %>
  <%= f.submit %>
<% end %>
